<?xml version="1.0"?>

<project name="assertions" default="jar" basedir=".">

	<target name="clean">
		<delete dir="bin"/>
	</target>

	<target name="compile">
		<mkdir dir="bin/main"/>
		<javac srcdir="src/main" destdir="bin/main" debug="true" nowarn="yes" source="1.5" target="1.5" encoding="utf8">
		</javac>
	</target>

	<target name="jar" depends="compile">
		<jar destfile="bin/exigence-assertions.jar">
			<fileset dir="bin/main" includes="**/*.class"/>
		</jar>
		<zip destfile="bin/exigence-assertions.zip">
			<fileset dir="src/main" includes="**/*.java"/>
		</zip>
		<mkdir dir="${user.home}/.bd"/>
		<copy todir="${user.home}/.bd" file="bin/exigence-assertions.jar"/>
		<copy todir="${user.home}/.bd" file="bin/exigence-assertions.zip"/>
	</target>

</project>

